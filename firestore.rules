rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && exists(/databases/$(database)/documents/admins/$(request.auth.token.email));
    }

    // Admins collection: Only separate admin process (or manually added) can write, but for now allow logged in users to read to verify themselves?
    // Actually, to check isAdmin(), we need to read admins collection.
    // Let's secure this: Only allow read if you are the user yourself?
    // Or just simple:
    match /admins/{email} {
      allow read: if request.auth != null;
      allow write: if false; // Only manual entry via console or script for root admin
    }

    // Players: Public read, Admin write
    match /players/{playerId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Teams: Public read, Admin write
    match /teams/{teamId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Competitions: Public read, Admin write
    match /competitions/{competitionId} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}
